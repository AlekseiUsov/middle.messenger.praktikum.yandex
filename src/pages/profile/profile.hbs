<div class="profile">
    <button class="profile__back" type="button">
        {{> SendIcon}}
    </button>
    <div class="profile__inner">
        {{> ProfileAvatar userName='Витя'}}
        <form class="profile__form">
            {{#if isChangePassword}}
            {{> ProfileField name='oldPassword' id='oldPassword' type='password' label="Старый пароль"
            value="•••••••••"
            disabled=false}}
            {{> ProfileField name='newPassword' id='newPassword' type='password' label="Новый пароль"
            value="•••••••••"
            disabled=false}}
            {{> ProfileField name='newPassword' id='newPassword-repeat' type='password' label="Новый пароль"
            value="•••••••••"
            disabled=false}}
            {{else}}
            {{> ProfileField name='email' id='email' type='email' label="Почта" value="pochta@yandex.ru"
            disabled=true}}
            {{> ProfileField name='login' id='login' type='text' label="Логин" value="ivanivanov"
            disabled=true}}
            {{> ProfileField name='first_name' id='first_name' type='text' label="Имя" value="Витя" disabled=true}}
            {{> ProfileField name='second_name' id='second_name' type='text' label="Фамилия" value="Степанов"
            disabled=true}}
            {{> ProfileField name='display_name' id='display_name' type='text' label="Имя в чате" value="Витя"
            disabled=true}}
            {{> ProfileField name='phone' id='phone' type='tel' label="Телефон" value="+7-909-967-30-30"
            disabled=true}}
            {{/if}}
        </form>
        {{#if isEditing}}
        {{> Button text='Сохранить' type='submit'}}
        {{else}}
        <ul class="profile__menu">
            <li class="profile__menu-item">{{> Button text='Изменить данные' isSecondary=true type='button'}}</li>
            <li class="profile__menu-item">{{> Button text='Изменить пароль' isSecondary=true type='button'}}</li>
            <li class="profile__menu-item">{{> Link text='Выход' href="/signin" isRed=true}}</li>
        </ul>
        {{/if}}
    </div>
</div>
