<li class="message {{#if isYou}}you{{/if}}">
  <div class="message__inner">
    {{#if photo}}
      <img src={{photo}} alt="{{photoalt}}" />
    {{else}}
      <div class="message__text">
        {{content}}
      </div>
    {{/if}}
    <div class="message__block">
      <div class="message__date">
        {{time}}
      </div>
      {{{MessageIcon}}}
    </div>
  </div>
</li>
